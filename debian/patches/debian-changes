-                                              PLYMOUTH_THEME_PATH "text/text.plymouth");
+                                              PLYMOUTH_THEME_PATH "text.plymouth");
     }
 
   if (state->boot_splash == NULL)
-    ply_error ("could not start boot splash: %m");
+    {
+      if (errno != ENOENT)
+        ply_error ("could not start boot splash: %m");
+      show_detailed_splash (state);
+    }
 }
 
